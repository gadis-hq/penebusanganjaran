<body>

<div class="card">
<h2>Semakan Kod Siri</h2>
<input type="text" id="kod" placeholder="Masukkan Kod Siri">
<br>
<button onclick="semak()">Semak Sekarang</button>
<p id="result"></p>
</div>

<script>

const API_URL = "PASTE_URL_EXEC_ANDA";
const TOKEN = "GQS-HQ-2026-SECURE";

async function semak(){

  const kod = document.getElementById("kod").value;

  const response = await fetch(
    API_URL + "?kod=" + kod +
    "&origin=https://gadishq.github.io" +
    "&token=" + TOKEN
  );

  const data = await response.json();

  if(data.status === "success"){
    document.getElementById("result").innerHTML =
      "✔ Kod Sah<br>Nama: " + data.nama +
      "<br>Hadiah: " + data.hadiah;
  } else {
    document.getElementById("result").innerHTML =
      "❌ " + data.message;
  }
}

if ('serviceWorker' in navigator) {
  navigator.serviceWorker.register('service-worker.js');
}

</script>

</body>
